# ECS Deployment Configuration (No Key Pair Required)
# Copy this file to .env and update with your values

# Deployment configuration
DEPLOYMENT_ENV=development
DEPLOYMENT_MODE=ECS

# Optional configurations
ALERT_EMAIL=your-email@example.com

# Domain configuration (optional)
# DOMAIN_NAME=app.example.com
# CERTIFICATE_ARN=arn:aws:acm:region:account:certificate/xxx
# HOSTED_ZONE_ID=Z1234567890ABC

# VPC configuration (optional - use existing VPC)
# EXISTING_VPC_ID=vpc-1234567890abcdef0

# Features
ENABLE_RAG=true
ENABLE_MEILISEARCH=false
ENABLE_SHAREPOINT=false